    <script>
        function showExplanation(element, explanation) {
            let expElement = element.nextElementSibling;
            expElement.innerText = explanation;
            expElement.style.display = "block";
            setTimeout(() => fixText(element, expElement), 2000);
        }

        function fixText(element, expElement) {
            let correctedText = "‚úîÔ∏è " + element.innerText.replace('üîç', '').trim();
            element.classList.remove("highlight");
            element.classList.add("fixed");
            element.innerHTML = correctedText;
            expElement.style.display = "none";
            checkCompletion();
        }
        
        function checkCompletion() {
            if (document.querySelectorAll(".highlight").length === 0) {
                document.getElementById("successMessage").style.display = "block";
            }
        }
    </script>
